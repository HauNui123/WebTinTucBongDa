@model List<WedTinTucBongDa_2001207127.Models.Tin>

@{
    ViewBag.Title = "TinTuc";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@{
    string iconclass = "";
    if (ViewBag.IconClass == "fa-sort-desc")
    {
        iconclass = "fa-sort-asc";
    }
    else
    {
        iconclass = "fa-sort-desc";
    }
}
<div class="container">
    <div class="row">
        <div class="col-8">
            <div>
                <h3><a style="color:red; text-decoration:none" href="/TinMoi/TinTuc?SortColumn=NgayTao&IconClass=@iconclass">Tin Chuyển Nhượng<i class="fa @ViewBag.IconClass"> </i></a></h3>
            </div>   
            @foreach (var item in Model)
            {
                <div class="row">
                    <div class="col-3">
                        <a><img src="~/Hinh/ChuyenNhuong/@item.HinhAnh" style="width:100%; height:150px;" /></a>
                    </div>
                    <div class="col-9">
                        <a style="font-size:20px;color:blue">@item.NgayTao.Value.ToString("d/M/yyyy")</a>
                        <h3><a href="/TinMoi/Detail/@item.MaTin">@item.TieuDe</a></h3>
                        <a style="font-size:18px;">@item.TomTat</a>
                    </div>
                </div>
                <br />
            }
        </div>
        <div class="col-4" style="padding:0; background-color:silver;">
            
        </div>
    </div>
</div>
