@model List<WedTinTucBongDa_2001207127.Models.Tin>

@{
    ViewBag.Title = "LichDauY";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

@{
    string iconclass = "";
    if (ViewBag.IconClass == "fa-sort-desc")
    {
        iconclass = "fa-sort-asc";
    }
    else
    {
        iconclass = "fa-sort-desc";
    }
}
<div class="container">
    <div class="row">
        <div class="col-8">
            <div>
                <h3><a style="color:red; text-decoration:none" href="/Admin/LichDauAdmin/LichDauY?SortColumn=NgayTao&IconClass=@iconclass&page=1">Lịch Một Số Trận Đấu Ở Ý<i class="fa @ViewBag.IconClass"> </i></a></h3>
            </div>
            <table class="table">
                <tr>
                    <th>Ngày Diễn Ra</th>
                    <th></th>
                    <th style="text-align:center;">CLB</th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a style="font-size:20px;">@item.NgayTao.Value.ToString("d/M/yyyy")</a></td>
                        <td><a><img src="~/Hinh/LoGoDoiBong/@item.LoGo1" style="width:auto; height:50px;" /></a></td>
                        <td style="text-align:center;"><a style="font-size:25px; color:red;"> @item.TomTat </a></td>
                        <td><a><img src="~/Hinh/LoGoDoiBong/@item.LoGo2" style="width:auto; height:50px;" /></a></td>
                        <td>
                            <a style="font-size:18px;" href="/Admin/LichDauAdmin/Edit/@item.MaTin">Edit</a> |
                            <a style="font-size:18px;" href="/Admin/LichDauAdmin/Delete/@item.MaTin">Delete</a>
                        </td>
                    </tr>
                }
                <tr>
                    <ul class="pagination justify-content-center">
                        @for (int i = 0; i < ViewBag.NoOfpage; i++)
                        {
                            if (i + 1 == ViewBag.page)
                            {
                                <li class="page-item active">
                                    <a class="page-link" href="/Admin/LichDauAdmin/LichDauY?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&page=@(i+1)">@(i + 1)</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" href="/Admin/LichDauAdmin/LichDauY?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&page=@(i+1)">@(i + 1)</a>
                                </li>
                            }
                        }
                    </ul>
                </tr>
            </table>
        </div>
        <div class="col-4" style="padding:0; background-color:silver;">

        </div>
    </div>
</div>

