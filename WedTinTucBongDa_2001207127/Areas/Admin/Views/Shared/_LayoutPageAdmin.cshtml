    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    <style>
        .chon {
            position: relative;
            display: inline-block;
        }

        .A1 {
            color: white;
            margin-right: 30px;
            font-size: 20px;
        }

        .A2 {
            color: white;
            font-size: 18px;
            text-decoration: none;
        }

        .MeNuCon {
            display: none;
            position: absolute;
            background-color: black;
            z-index: 1;
            list-style: none;
            width: 150px;
        }

        .A1:focus {
            color: red;
        }

        .chon:hover .MeNuCon {
            display: block;
        }

        .nav-item a:hover {
            color: aqua;
        }

        .d-block {
            height: 330px;
        }

        .footer {
            margin-top: 20px;
            height: 350px;
            width: auto;
            background-color: rgb(152, 193, 233);
        }

        .footer_heading {
            text-align: center;
            color: white;
            margin-top: 30px;
        }

            .footer_heading > a {
                font-size: 20px;
                text-decoration: none;
            }

        .Ten_footer {
            text-align: center;
            text-transform: uppercase;
            font-style: italic;
            color: white;
            font-size: 35px;
        }
    </style>
</head>

